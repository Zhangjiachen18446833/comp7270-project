<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="/">Home</a></li>
            <li role="presentation"><a href="/estate/search">Search</a></li>
            <li role="presentation"><a href="/estate/cre">Create</a></li>
            <li role="presentation"><a href="/estate/admin">Admin</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="home">
                <div class="page-header">
                    <h1>Real Estate Rental System</h1>
                    <small>Real Estate Rental Management System is a web-based system to facilitate flatshare and
                        finding roommates.</small>
                </div>

                <div class="row" id="home-estate">

                    <% if (estates.length <= 0) { %>
                    <div class="col-xs-6 col-md-12">
                        <h2>there is no data,please add estate info</h2>
                    </div>
                    <% } else { %>
                    <% estates.forEach( function(model) { %>
                    <div class="col-xs-6 col-md-6" style="border: 1px solid#000000; border-radius: 1px;" >
                        <div class="col-md-12">
                            <% if(model.isHighlight) { %>
                            <h3 style="color:#5a5af7;" data-api="<%= '/estate/edit/' + model.id %>"><%= model.title%></h3>
                            <% } else { %>
                            <h3 style="color:#070708;" data-api="<%= '/estate/edit/' + model.id %>"><%= model.title%></h3>
                            <% } %>

                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div style="width: 125px; height: 125px; overflow: hidden; position: relative;">
                                    <img style="position:absolute; max-width: 100%; left: 0; top: 0; right: 0; bottom: 0; margin: 0;"
                                        src="<%= model.imageurl%>" alt="...">
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="row"><b>Estate:</b> <%= model.estate %></div>
                                <div class="row">Gross Area: <%= model.area %></div>
                                <div class="row">Rent: <%= model.rent %></div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <% } %>

                </div>
                <div id="modal-home" class="modal fade" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Estate Detal</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row" style="margin: auto;">
                                    <div class="col-md-12">
                                        <h3 id="h-title" style="color:#070708;"></h3>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div
                                                style="width: 225px; height: 225px; overflow: hidden; position: relative;">
                                                <img id="h-image" style="position:absolute; max-width: 100%; left: 0; top: 0; right: 0; bottom: 0; margin: 0;"
                                                    src="" alt="estate">
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="row"><b>Estate: </b><span id="h-estate">123</span></div>
                                            <div class="row"><b>Gross Area: </b><span id="h-area">123</span></div>
                                            <div class="row"><b>Rent: </b><span id="h-rent">123</span></div>
                                            <div class="row"><b>Bedrooms: </b><span id="h-bedrooms">123</span></div>
                                            <div class="row"><b>Expected Tenants: </b><span id="h-tenants">123</span></div>
                                            <div class="row"><b>Created: </b><span id="h-createdAt">123</span></div>
                                            <div class="row"><b>Upatated: </b><span id="h-updatedAt">123</span></div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-xs-2"></div>
</div>