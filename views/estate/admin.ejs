<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation"><a href="/">Home</a></li>
            <li role="presentation"><a href="/estate/search">Search</a></li>
            <li role="presentation"><a href="/estate/cre">Create</a></li>
            <li role="presentation" class="active"><a href="/estate/admin">Admin</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="home">
                <div class="page-header">
                    <h1>Real Estate Rental System</h1>
                    <small>Real Estate Rental Management System is a web-based system to facilitate flatshare and
                        finding roommates.</small>
                </div>

                <div class="row">
                    <div class="row" style="margin: auto;">

                        <% if(estates.length <= 0) {%>
                        <div class="row">
                            <div class="col-xs-6 col-md-12">
                                <h2>there is no data,please add estate info</h2>
                            </div>
                        </div>
                        <% } else {%>
                        <table id="tableedit" class="table table-bordered">
                            <caption><h2>info</h2></caption>
                            <thead>
                                <tr>
                                    <th>serial</th>
                                    <th>title</th>
                                    <th>Estate</th>
                                    <th>Operating</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% estates.forEach(function(model,index) { %>
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><%= model.title %></td>
                                    <td><%= model.estate %></td>
                                    <td><button id="edit" data-id="<%= '/estate/edit/' + model.id %>" type="edit"
                                            class="btn btn-primary btn-sm">edit</button></td>
                                </tr>
                                <% }) %>

                            </tbody>
                            <% } %>
                        </table>
                    </div>
                </div>

            </div>
        </div>

        <div id="modal-admin" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Edit Estate</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row" style="margin: auto;">

                            <form id="editform">
                                <h2>Progerty Edit</h2>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="title">Property title:</label>
                                            <input name="title" type="text" class="form-control"
                                                placeholder="NO.1 estate" id="title">
                                        </div>
                                    </div>
                                    <!--  col-md-6   -->

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="imageurl">Image URL:</label>
                                            <input name="imageurl" type="url" class="form-control"
                                                placeholder="https://xxxx" id="imageurl">
                                        </div>
                                    </div>
                                    <!--  col-md-6   -->
                                </div>


                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="estate">Estate:</label>
                                            <select name="estate" class="form-control">
                                                <option>Festival city</option>
                                                <option>Tin Ma Court</option>
                                                <option>City One Shatin</option>
                                            </select>
                                        </div>


                                    </div>
                                    <!--  col-md-6   -->

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="bedrooms">Bedrooms:</label>
                                            <input name="bedrooms" type="number" class="form-control" id="bedrooms"
                                                placeholder="2">
                                        </div>
                                    </div>
                                    <!--  col-md-6   -->
                                </div>
                                <!--  row   -->


                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="area">Gross Area:</label>
                                            <input name="area" type="number" class="form-control" id="area"
                                                placeholder="800">
                                        </div>
                                    </div>
                                    <!--  col-md-6   -->

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="tenants">Expected Tenants:</small></label>
                                            <input name="tenants" type="number" class="form-control" id="tenants"
                                                placeholder="2">
                                        </div>

                                    </div>
                                    <!--  col-md-6   -->
                                </div>
                                <!--  row   -->

                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="rent">Rent:</label>
                                            <input name="rent" type="number" class="form-control" id="rent"
                                                placeholder="2000">
                                        </div>
                                    </div>
                                    <!--  col-md-6   -->

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <label>
                                                    <input name="isHighlight" type="checkbox" value="" id="newsletter">
                                                    Highlight Property
                                                </label>
                                            </div>
                                        </div>

                                    </div>
                                    <!--  col-md-6   -->
                                </div>
                                <!--  row   -->


                            </form>
                            <button id="editbutton" type="submit" data-id="" class="btn btn-primary">Submit</button>
                            <button id="deletebutton" type="submit" data-id=""
                                class="btn btn-danger col-md-offset-3">Delete</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-2"></div>
</div>